<% if user_signed_in? %>
    <% if post.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
        <%=link_to post_favorite_path(post.id), method: :delete, remote: true do %>
        <i class="fas fa-heart unlike-btn" ></i> <%= post.favorites.count%>
        <%end%>
    <% else %>
        <%=link_to post_favorites_path(post.id), method: :post, remote: true do%>
        <i class="far fa-heart like-btn"></i> <%= post.favorites.count%>
        <%end%>
    <% end %>
<% else %>
    <p><span>お気に入り数: </span><%= post.favorites.count %></p>
<% end %>